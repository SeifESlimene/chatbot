
<div class="signup" >
    <%- include('partials/messages')  -%>

    <h3 style="color: white;">Register Here</h3>
    <hr style="background-color:white; height:4px;">

    <a class="btn btn-danger" href="/google">Google</a>

    <a class="btn btn-info" href="/facebook">Facebook</a>
    <br><br>
    <div class="form">
        <form action="Register" method="POST">
            Name:<br>
            <input type="text" id="username" name="username" placeholder="username"
            value="<%= typeof username != 'undefined' ? username :'' %>" required><br>
            Email:<br>
            <input type="email" id="email" name="email" placeholder="Your Email"
            value="<%= typeof email !='undefined' ? email:'' %>" required><br>
            Password: <br>
            <input type="password" name="password" id="password" placeholder="Password" required><br>
            <input type="submit" value="Register" > OR <span> <a href="/Login" style="color: tomato; text-decoration: underline;">Login Here</a></span>
        </form>
    </div>
</div>
